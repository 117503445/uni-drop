{
  "name": "uni-drop",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "playwright": "tsc --sourceMap --downlevelIteration ./tests/e2e/main.ts && mv tests/e2e/main.js tests/e2e/main.cjs && node --enable-source-maps tests/e2e/main.cjs",
    "prettier": "prettier . --write",
    "check": "pnpm run lint && pnpm run prettier && pnpm run build",
    "test": "pnpm exec vitest run",
    "gen-fake-names": "tsc --sourceMap --downlevelIteration scripts/gen-fake-names.ts && mv scripts/gen-fake-names.js scripts/gen-fake-names.cjs && node --enable-source-maps scripts/gen-fake-names.cjs"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "filesize": "^10.1.0",
    "js-file-download": "^0.4.12",
    "peerjs": "1.4.7",
    "public-ip": "^6.0.1",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.20.0",
    "swr": "^2.2.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/node": "^20.10.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.16",
    "commander": "^11.1.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "playwright": "^1.40.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "rollup-plugin-visualizer": "^5.9.3",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.3.2",
    "vite": "^4.4.5",
    "vitest": "^0.34.6"
  }
}
